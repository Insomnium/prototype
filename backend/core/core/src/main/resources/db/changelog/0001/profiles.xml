<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd
      http://www.liquibase.org/xml/ns/pro
      http://www.liquibase.org/xml/ns/pro/liquibase-pro-4.1.xsd">


    <changeSet id="0001_001_profile-init" author="pb">
        <createTable tableName="profiles">
            <column name="id_profile" type="bigserial" autoIncrement="true" >
                <constraints nullable="false" />
            </column>
            <column name="title" type="varchar" >
                <constraints nullable="false" />
            </column>
            <column name="birth" type="date" >
                <constraints nullable="true" />
            </column>
            <column name="gender" type="char" > <!-- 'M'/'F' -->
                <constraints nullable="false" />
            </column>
        </createTable>
        <addPrimaryKey tableName="profiles" columnNames="id_profile" constraintName="pk_profiles" />
    </changeSet>

    <changeSet id="0001_002_purposes" author="pb">
        <createTable tableName="purposes">
            <column name="id_purpose" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="id_profile" type="bigint" >
                <constraints nullable="false" />
            </column>
            <column name="sexting" type="bool">
                <constraints nullable="false" />
            </column>
            <column name="dating" type="bool">
                <constraints nullable="false" />
            </column>
            <column name="relationships" type="bool">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addPrimaryKey tableName="purposes" columnNames="id_purpose" constraintName="pk_purposes" />
        <addForeignKeyConstraint baseTableName="purposes" baseColumnNames="id_profile" constraintName="pk_purposes-to_profiles"
                                 referencedTableName="profiles"
                                 referencedColumnNames="id_profile" />
        <addUniqueConstraint tableName="purposes" columnNames="id_profile" constraintName="uniq_id_profile" />
    </changeSet>
</databaseChangeLog>
